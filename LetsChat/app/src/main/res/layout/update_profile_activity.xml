<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    tools:context="com.projects.adetunji.letschat.uis.activities.UpdateProfileActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay" >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/teal_400"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rect_bg"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="70dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_avg"
            android:text="Edit ..."
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_avg"
            android:background="@drawable/bottom_border"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:padding="@dimen/padding_avg"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />


        <com.lamudi.phonefield.PhoneEditText
            android:id="@+id/phone_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_avg"
            android:background="@drawable/bottom_border"
            android:imeOptions="actionDone"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"/>

        <Button
            android:id="@+id/edit_approve_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_avg"
            android:layout_gravity="end"
            android:backgroundTint="@color/teal_100"
            android:text="Ok"  />

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>