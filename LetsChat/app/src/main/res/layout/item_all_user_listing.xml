<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/padding_avg"
    android:paddingEnd="@dimen/padding_avg"
    android:paddingStart="@dimen/padding_avg"
    android:paddingTop="@dimen/padding_small"
    android:divider="@android:color/transparent"
    android:dividerHeight="56dp">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pic_circleView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/text_view_email"
        android:layout_alignParentStart="true"
        android:padding="@dimen/padding_avg"
        android:src="@drawable/profile_picture" />

    <android.support.v4.widget.Space
        android:layout_width="@dimen/space_big"
        android:layout_height="wrap_content"
        android:id="@+id/space"/>

    <TextView
        android:id="@+id/text_view_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="AdetunjiOls"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@+id/space"
        android:paddingTop="@dimen/padding_small"
        android:layout_alignStart="@+id/text_view_email" />

    <TextView
        android:id="@+id/text_view_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="adetunji@xyz.com"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="italic"
        android:layout_below="@+id/text_view_username"
        android:layout_toEndOf="@+id/pic_circleView"
        android:layout_marginStart="10dp"
        android:paddingBottom="@dimen/_7sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/last_seen_date"
        android:layout_above="@+id/text_view_email"
        android:layout_alignParentEnd="true"
        android:text="12, Jan (22:11)"
        android:textColor="@color/black"
        android:textSize="12sp" />


</RelativeLayout>