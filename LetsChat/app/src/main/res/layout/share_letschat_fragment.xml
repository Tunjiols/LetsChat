<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_big"
    android:layout_marginTop="@dimen/padding_avg">

    <TextView
        android:id="@+id/invite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invite a friend"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:padding="@dimen/padding_avg"
        android:layout_marginTop="13dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@drawable/line_divider"
        android:paddingStart="@dimen/margin_avg"
        android:paddingEnd="@dimen/margin_avg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout"
        android:orientation="vertical"
        android:padding="@dimen/padding_avg"
        android:background="@drawable/rounded_rect_bg"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="Invite"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:padding="@dimen/padding_avg"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_view"
            android:listSelector="@color/green_50"
            android:clickable="true"
            android:focusable="true"
            >

        </ListView>

    </LinearLayout>


</LinearLayout>