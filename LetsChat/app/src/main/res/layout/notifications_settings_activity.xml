<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    tools:context="com.projects.adetunji.letschat.uis.activities.NotificationsSettingsActivity">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay" >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/teal_400"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            />

    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_big"
        android:padding="@dimen/margin_avg">

        <TextView
            android:id="@+id/sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_avg"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:text="Sound"  />

        <CheckBox
            android:id="@+id/sound_box"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/padding_avg"
            android:layout_marginTop="16dp"
            android:checked="true" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/line_divider"
            android:layout_below="@+id/sound_box"
            android:paddingStart="@dimen/margin_avg"
            android:paddingEnd="@dimen/margin_avg"
            android:id="@+id/imageView" />


        <TextView
            android:id="@+id/popups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_avg"
            android:layout_below="@id/sound"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:text="Popups" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/line_divider"
            android:layout_below="@+id/popups"
            android:paddingStart="@dimen/margin_avg"
            android:paddingEnd="@dimen/margin_avg"/>


        <CheckBox
            android:id="@+id/popups_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imageView"
            android:checked="true"
            android:padding="@dimen/padding_avg" />

        <TextView
            android:id="@+id/vibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_avg"
            android:layout_below="@id/popups"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:text="Vibrate"  />

        <CheckBox
            android:id="@+id/vibrate_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_avg"
            android:layout_below="@id/popups"
            android:layout_alignParentEnd="true"
            android:checked="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/line_divider"
            android:layout_below="@+id/vibrate_box"
            android:paddingStart="@dimen/margin_avg"
            android:paddingEnd="@dimen/margin_avg"/>


        <TextView
            android:id="@+id/ringtone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_avg"
            android:layout_below="@id/vibrate"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:text="Ringtone"  />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/line_divider"
            android:layout_below="@+id/ringtone"
            android:paddingStart="@dimen/margin_avg"
            android:paddingEnd="@dimen/margin_avg"/>


        <TextView
            android:id="@+id/light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_avg"
            android:layout_below="@id/ringtone"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:text="Light"  />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/line_divider"
            android:layout_below="@+id/light"
            android:paddingStart="@dimen/margin_avg"
            android:paddingEnd="@dimen/margin_avg"/>


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>

