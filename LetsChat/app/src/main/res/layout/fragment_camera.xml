<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:23"
        android:textColor="@color/white"
        android:textSize="@dimen/_9sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"/>

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gallery_letschat_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gallery_letschat"
            android:contentDescription="@string/app_info"
            android:layout_marginStart="@dimen/margin_avg"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/shooter_btn"
            android:layout_width="@dimen/_52sdp"
            android:layout_height="@dimen/_52sdp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_info"
            android:src="@drawable/circle_accent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shooter_btn"
            android:text="Tap for photo, hold for video"
            android:textColor="@color/white"
            android:textSize="@dimen/_9sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_12sdp"/>

        <ImageView
            android:id="@+id/Text_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_avg"
            android:contentDescription="@string/app_info"
            android:src="@drawable/ic_text" />

    </RelativeLayout>
</RelativeLayout>