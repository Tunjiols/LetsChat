<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        android:paddingEnd="@dimen/padding_small"
        android:paddingStart="@dimen/padding_small"
        android:paddingTop="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/relativeLayout_mainBody">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pic_circleView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/padding_small"
            android:src="@drawable/profile_picture" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/pic_circleView"
        android:id="@+id/linear_layout"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/margin_small"
        android:background="@drawable/chat_rounded_rect_bg_mine">

    <TextView
        android:id="@+id/text_view_chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingTop="@dimen/_3sdp"
        android:paddingStart="@dimen/padding_small"
        android:paddingEnd="@dimen/space_small"
        android:paddingBottom="@dimen/_3sdp"
        android:text="Notice man!"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="14sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end">

            <ImageView
                android:id="@+id/icon_thumb_up"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:src="@drawable/ic_thumb_up_frame"
                android:layout_marginStart="@dimen/padding_small"/>

            <ImageView
                android:id="@+id/icon_send_status"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginStart="@dimen/padding_small"
                android:src="@drawable/all_done_icon" />

            <TextView
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:text="sdfsdfsd"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="italic" />


        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/message_dialog_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_49sdp"
            android:background="@drawable/forward_mine_dialog_background"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/forward_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:clickable="true"
                android:text="Forward"
                android:focusable="true"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/copy_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Copy"
                android:focusable="true"
                android:layout_margin="@dimen/margin_small"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/delete_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Delete"
                android:focusable="true"
                android:layout_margin="@dimen/margin_small"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/white"/>


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>